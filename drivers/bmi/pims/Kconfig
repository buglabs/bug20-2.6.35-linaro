#
# BMI PIMS
#

config BMI_PIMS
	tristate "BMI_PIMS"
	depends on BMI
	default n
	---help---
	  BMI plug-in module support

	  This driver must be built as a module.

menu "BMI PIMS"

config BUG_FACTORY_TEST
	tristate "BUG_FACTORY_TEST"
	depends on BMI_PIMS
	default n
	---help---
	  BMI FACTORY Test plug-in module

	  This driver can also be built as a module.

config BMI_GPS
	tristate "BMI_GPS"
	depends on BMI_PIMS
	default n
	---help---
	  BMI GPS plug-in module

	  This driver can also be built as a module.

source "drivers/bmi/pims/mdacc/Kconfig"

config BMI_LCD
	tristate "BMI LCD Module support"
	depends on BMI_PIMS
	default n
	---help---
	  This is the BMI driver for the LCD Plug-In Module.

config BMI_VIDEO
	tristate "BMI Video Module support"
	depends on BMI_PIMS && TFP410 && THS8200
        depends on GPIO_PCA953X && (FIRMWARE_EDID = y)
	default n
	---help---
	  This is the BMI driver for the Video Plug-In Module (DVI/VGA).

config BMI_AUDIO
	tristate "BMI Audio Module support"
	depends on BMI_PIMS
	default n
	---help---
	  This is the BMI bus driver for the Audio Plug-In Module.

	  Select M to make a kernel-loadable module.

config BMI_AUDIO_CODECS
        bool
        select SND_OMAP_SOC_MCBSP
        select SND_SOC_TLV320AIC3X
	default y if BMI_AUDIO

source "drivers/bmi/pims/camera/Kconfig"

config BMI_VH
	tristate "BMI von Hippel Module support"
	depends on BMI_PIMS
	default n
	---help---
	  BMI von Hippel plug-in module

	  This driver can also be built as a module.

config BMI_SENSOR
        tristate "BMI Sensor Module support"
        depends on BMI_PIMS
        default n
        ---help---
          BMI Sensor plug-in module

          This driver can also be built as a module.

config BMI_ZB
	tristate "BMI ZigBee Module support"
	depends on BMI_PIMS
	default n
	---help---
	  BMI ZigBee plug-in module

	  This driver can also be built as a module.

config BMI_GSM
	tristate "BMI GSM/UMTS Module support"
	depends on BMI_PIMS
	default n
	---help---
	  BMI von Hippel plug-in module

	  This driver can also be built as a module.

config BMI_ACCNT
        tristate "Accenture BMI Accelerometer Module support"
        depends on BMI_PIMS
        default n
        ---help---
          BMI Sensor plug-in module

          This driver can also be built as a module.


config BMI_BUGDUINO
        tristate "Bug Arduino BMI Module support"
        depends on BMI_PIMS
        default n
        ---help---
          BMI Bug Arduino plug-in module

          This driver can also be built as a module.

config BMI_RF4CE
	tristate "BMI GP RF4CE Module support"
	depends on BMI_PIMS
	default n
	---help---
	  BMI GreenPeak RF4CE plug-in module

	  This driver can also be built as a module.

config BMI_DECT
	tristate "BMI DECT Module support"
	depends on BMI_PIMS
	default n
	---help---
	  BMI DSPG DCX79 USB DECT Dongle module

	  This driver can also be built as a module.

config BMI_DLNA_MEDIA
	tristate "BMI DLNA Media Module support"
	depends on BMI_PIMS
	default n
	---help---
	  BMI VIXS XC5195 Network Processor module that support DLNA
	  media server, MoCA, and IEEE1394/Firewire

	  This driver can also be built as a module.


endmenu

